{% extends 'base.html.twig' %}

{% block title %}
Lista de usuarios
{% endblock %}

{% block body %}
{{ include('./admin/adminheader.html.twig')}}

<section id="userList">
	<h1>Lista de usuarios</h1>
	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nombre</th>
				<th>Discord</th>
				<th>Email</th>
				<th>Baneado</th>
				<th colspan="3">Acciones</th>
			</tr>
		</thead>
		<tbody>
			{% for user in listUsers %}
				<tr>
					<td>{{ user.id }}</td>
					<td>{{ user.username }}</td>
					<td>{{ user.discord }}</td>
					<td>{{ user.email }}</td>
					<td>{{ user.Baneado }}</td>

					<td>
						{# <form method="post" action="{{ path('user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
							<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
							<button class="eliminarbutton">Eliminar</button>
						</form> #}
						<button>
							<a href= "/admin/user/{{user.id}}/ban">Ban</a>
						</button>
					</td>
					<td><button>
							<a href= "/admin/user/{{user.id}}/unban">Unban</a>
						</button></td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">Lista vacía</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	<div>
	<button>
	<a href="{{ path('admin') }}">Volver ↩</a>
	</button>
	</div>
</section>
{{ include('./admin/footer.html.twig')}}
{% endblock %}
